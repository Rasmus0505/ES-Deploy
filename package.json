{
  "name": "english-studying",
  "private": true,
  "version": "1.222.10",
  "description": "Desktop-first English study app with frontend-v2 as the only web entry.",
  "scripts": {
    "flow:smoke": "node --test tools/tests/listening-upload-v2-flow.test.mjs",
    "a11y:home": "npx --yes pa11y http://127.0.0.1:8510/ --runner axe --threshold 0",
    "a11y:listening": "npx --yes pa11y http://127.0.0.1:8510/listening --runner axe --threshold 0",
    "lint:url-literals": "node tools/check-url-literals.mjs",
    "lint:styles": "stylelint \"frontend-v2/src/**/*.css\"",
    "lint:inline-style": "node tools/tests/check-inline-style.mjs",
    "lint:range": "node tools/tests/check-native-range.mjs",
    "lint:typography": "node tools/tests/check-typography-contract.mjs",
    "lint:upload-shadcn": "node tools/tests/check-upload-url-shadcn-contract.mjs",
    "lint:history-upgrade": "node tools/tests/check-history-upgrade-contract.mjs",
    "lint:ui": "npm run lint:url-literals && npm run lint:styles && npm run lint:inline-style && npm run lint:range && npm run lint:typography && npm run lint:upload-shadcn && npm run lint:history-upgrade",
    "test:visual": "playwright test tools/tests/visual-baseline.spec.mjs",
    "test:pw:stable": "playwright test --config playwright.stable.config.mjs",
    "test:pw:listening-stable": "playwright test tools/tests/upload-url-shadcn-interaction.spec.mjs tools/tests/history-upgrade-drawer-ui.spec.mjs tools/tests/listening-history-pending-continue.spec.mjs tools/tests/listening-task-continue-regression.spec.mjs --config playwright.stable.config.mjs",
    "test:visual:update": "playwright test tools/tests/visual-baseline.spec.mjs --update-snapshots",
    "v2:dev": "npm --prefix frontend-v2 run dev",
    "v2:build": "npm --prefix frontend-v2 run build",
    "knip:root": "knip --workspace .",
    "knip:v2": "knip --workspace frontend-v2",
    "knip:all": "node -e \"const { spawnSync } = require('node:child_process'); const run = (name) => spawnSync('npm', ['run', name], { stdio: 'inherit', shell: true }); const root = run('knip:root').status || 0; const v2 = run('knip:v2').status || 0; process.exit(root || v2);\"",
    "knip:quick": "knip --max-show-issues 8",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status",
    "release:version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.3.0",
    "gsap": "3.14.2",
    "knip": "^5.85.0",
    "lenis": "1.3.17",
    "stylelint": "^16.26.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3"
  }
}
