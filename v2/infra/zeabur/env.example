# Shared
APP_ENV=production
APP_NAME=listening-v2
RUNTIME_DIR=/data/runtime
MAX_VIDEO_MINUTES=20
KEEP_SOURCE_HOURS=24
KEEP_INTERMEDIATE_HOURS=72
ENABLE_MOCK_PIPELINE=false
AUTO_INIT_DB=false
ENABLE_METRICS=true
WORKER_METRICS_PORT=9101

# Database / Queue
DATABASE_URL=postgresql+psycopg://postgres:password@postgres:5432/listening_v2
REDIS_URL=redis://redis:6379/0

# Auth / Admin
JWT_SECRET=replace-with-strong-random
ADMIN_API_TOKEN=replace-with-admin-token
APP_MASTER_KEY=replace-with-master-key
JWT_EXP_MINUTES=10080

# DashScope
DASHSCOPE_API_KEY=replace-with-dashscope-key
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# OSS
OSS_ACCESS_KEY_ID=replace-with-oss-ak
OSS_ACCESS_KEY_SECRET=replace-with-oss-sk
OSS_BUCKET=replace-with-bucket-name
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# Web
NEXT_PUBLIC_API_BASE_URL=https://your-v2-api-domain
